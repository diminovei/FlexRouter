<UserControl x:Class="FlexRouter.EditorsUI.AccessDescriptorsEditor.RangeUnionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="300">
    <Grid>
        <Label x:Name="_dependendDescriptorListLabel" Content="Dependent access descriptors" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.421,0.385"/>
        <ListBox x:Name="_dependendDescriptorList" Height="159" Margin="10,41,10,0" VerticalAlignment="Top"/>
        <Button x:Name="_addDescriptor" Content="+" HorizontalAlignment="Left" Margin="226,12,0,0" VerticalAlignment="Top" Width="29" Click="AddDescriptorClick"/>
        <Button x:Name="_removeDescriptor" Content="-" HorizontalAlignment="Left" Margin="260,12,0,0" VerticalAlignment="Top" Width="30" Click="RemoveDescriptorClick"/>

    </Grid>
</UserControl>

<Window x:Class="FlexRouter.EditorsUI.Dialogues.Selector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selector" Height="452" Width="574" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TreeView Grid.Row="0" x:Name="_tree" Height="Auto" Margin="10,10,0,10" VerticalAlignment="Top" Width="Auto" SelectedItemChanged="VariablesTreeSelectedItemChanged"/>
        <TextBox Grid.Row="1" x:Name="_description" Margin="10,0,0,27" Height="53" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button Grid.Row="1" x:Name="_ok" Content="Ok" HorizontalAlignment="Right" Margin="0,0,95,0" VerticalAlignment="Bottom" Width="80" Height="22" RenderTransformOrigin="-0.162,0.682" Click="OkClick"/>
        <Button Grid.Row="1" x:Name="_cancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Bottom" Width="80" Height="22" Click="CancelClick"/>
    </Grid>
</Window>

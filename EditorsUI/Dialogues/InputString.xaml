<Window x:Class="FlexRouter.EditorPanels.InputString"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputString" Height="150" Width="384">
    <Grid>
        <TextBox x:Name="_inputText" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356"/>
        <Button x:Name="_ok" Content="Ok" HorizontalAlignment="Left" Margin="211,88,0,0" VerticalAlignment="Top" Width="75" Click="_ok_Click"/>
        <Button x:Name="_close" Content="Close" HorizontalAlignment="Left" Margin="291,88,0,0" VerticalAlignment="Top" Width="75" Click="_close_Click"/>

    </Grid>
</Window>
